@model Forum.Web.Areas.Admin.Models.ThemeViewModel
@{
    ViewData["Title"] = "Admin Home";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Themes</h2>

<form asp-controller="Home" asp-action="CreateTheme" method="post">
    <div>
        <label asp-for="Theme"></label>
        <br />
        <input asp-for="Theme" />
        <br />
        <label asp-for="Description"></label>
        <br />
        <textarea asp-for="Description"></textarea>
    </div>
    <input type="submit" value="Create theme" />
</form>
<br />

<ul class="list-group">
    @foreach (var theme in Model.Themes)
    {
        <li>
            <a href="/@theme.Title" class="list-group-item list-group-item-action">
                <h5>@theme.Title</h5>
            </a>
        </li>
    }
</ul>