@model Forum.Web.Areas.Admin.Models.ThemeViewModel
@{
    ViewData["Title"] = "Admin Home";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <link href="~/css/admin.css" rel="stylesheet" />
</head>

<div class="AdminForm">
    <h2>Add a theme</h2>

    <form asp-controller="Home" asp-action="CreateTheme" method="post">
        <div>
            <label asp-for="Theme"></label>
            <br />
            <input asp-for="Theme" />
            <br />
            <label asp-for="Description"></label>
            <br />
            <textarea asp-for="Description"></textarea>
        </div>
        <br />
        <input type="submit" value="Create theme" class="btn btn-danger" />
    </form>
</div>
<br />

<div class="AdminForm">
    <h2>Update a theme</h2>

    <form asp-controller="Home" asp-action="UpdateTheme" method="post">
        <div>
            <label>Selected theme: </label>
            <br />
            <select asp-for="Theme">
                @foreach (var theme in Model.Themes)
                {
                    <option value="@theme.Id">@theme.Title</option>
                }
            </select>
            <br />
            <label asp-for="NewThemeInput"></label>
            <br />
            <input asp-for="NewThemeInput" />
            <br />
            <label>Enter the new description of the theme. </label>
            <br />
            <textarea asp-for="Description"></textarea>
        </div>
        <br />
        <input type="submit" value="Update theme" class="btn btn-danger" />
    </form>
</div>
<br />

<div class="AdminForm">
    <h2>Remove a theme</h2>

    <form asp-controller="Home" asp-action="RemoveTheme" method="post">
        <div>
            <label>Selected theme: </label>
            <br />
            <select asp-for="Theme">
                @foreach (var theme in Model.Themes)
                {
                    <option value="@theme.Id">@theme.Title</option>
                }
            </select>
        </div>
        <br />
        <input type="submit" value="Remove theme" class="btn btn-danger" />
    </form>
</div>
<br />

<div class="AdminForm">
    <h2>Add a category</h2>

    <form asp-controller="Home" asp-action="CreateCategory" method="post">
        <div>
            <label asp-for="CategoryTheme"></label>
            <br />
            <select asp-for="CategoryTheme">
                @foreach (var theme in Model.Themes)
                {
                    <option value="@theme.Id">@theme.Title</option>
                }
            </select>
            <br />
            <label asp-for="Category"></label>
            <br />
            <input asp-for="Category" />
            <br />
            <label asp-for="Description"></label>
            <br />
            <textarea asp-for="Description"></textarea>
        </div>
        <br />
        <input type="submit" value="Create category" class="btn btn-danger" />
    </form>
</div>
<br />

<div class="AdminForm">
    <h2>Edit a category</h2>

    <form asp-controller="Home" asp-action="UpdateCategory" method="post">
        <div>
            <label asp-for="Category"></label>
            <br />

            <select asp-for="Category">
                @foreach (var categories in Model.Categories)
                {
                    <option value="@categories.Id">@categories.Title</option>
                }
            </select>

            <br />
            <label asp-for="NewCategoryInput"></label>
            <br />
            <input asp-for="NewCategoryInput" />
            <br />
            <label asp-for="Description"></label>
            <br />
            <textarea asp-for="Description"></textarea>
        </div>
        <br />
        <input type="submit" value="Edit category" class="btn btn-danger" />
    </form>
</div>
<br />

<div class="AdminForm">
    <h2>Remove a category</h2>

    <form asp-controller="Home" asp-action="RemoveCategory" method="post">
        <div>
            <label asp-for="Category"></label>
            <br />
            <select asp-for="Category">
                @foreach (var categories in Model.Categories)
                {
                    <option value="@categories.Id">@categories.Title</option>
                }
            </select>
        </div>
        <br />
        <input type="submit" value="Remove category" class="btn btn-danger" />
    </form>
</div>
