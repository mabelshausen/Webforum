@model Forum.Web.ViewModels.CategoriesIndexVm
@{
    ViewData["Title"] = "Index";
}

<h2>@Model.Theme.Title</h2>
<p>@Model.Theme.Description</p>

<ul class="list-group">
    @foreach (var cat in Model.CategoriesBytheme)
    {
        <li>
            <a href="/@Model.Theme.Title/@cat.Title" class="list-group-item list-group-item-action">
                <h5>@cat.Title</h5>
            </a>
        </li>
    }
</ul>