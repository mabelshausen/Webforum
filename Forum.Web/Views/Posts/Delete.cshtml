@model Forum.Web.Entities.Post
@{
    ViewData["Title"] = "Delete";
}

<h4 class="text-danger">Are you sure you want to delete this post?</h4>
<div class="card flex-column">
    <div class="d-flex justify-content-between">
        <h5>@Model.Title</h5>
        <span class="text-muted">@Model.DateTime.ToString("HH:mm, dd MMMM yyyy")</span>
    </div>
</div>

<form asp-controller="Posts" asp-action="DeletePost" method="post">
    <input asp-for="Id" type="hidden" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>
