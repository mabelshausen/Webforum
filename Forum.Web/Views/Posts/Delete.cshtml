@model Forum.Web.Entities.Post
@{
    ViewData["Title"] = "Delete";
}

<h4 class="text-danger mb-3">Are you sure you want to delete this post?</h4>
<div class="card flex-column mb-3">
    <div class="d-flex justify-content-between">
        <div>
            <h5>@Model.Title</h5>
            <span>@Html.Raw(Model.Content.Replace(Environment.NewLine, "<br/>"))</span>
        </div>
        <span class="text-muted col-3 text-right">@Model.DateTime.ToString("HH:mm, dd MMMM yyyy")</span>
    </div>
</div>

<form asp-controller="Posts" asp-action="DeletePost" method="post">
    <div class="form-group">
        <input asp-for="Id" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href='javascript:history.go(-1)' class="btn btn-secondary">Cancel</a>
    </div>
</form>
