@model Forum.Web.Entities.Comment
@{
    ViewData["Title"] = "Delete";
}

<h5>
    Are you sure you want to delete this comment?
</h5>
<div class="card flex-column">
    <div class="d-flex justify-content-between">
        <span>@Html.Raw(Model.Content.Replace(Environment.NewLine, "<br/>"))</span>
        <span class="text-muted">@Model.DateTime.ToString("HH:mm, dd MMMM yyyy")</span>
    </div>
</div>

<form asp-controller="Comments" asp-action="DeleteComment" method="post">
    <input asp-for="Id" type="hidden" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>

