@model Forum.Web.Entities.Comment
@{
    ViewData["Title"] = "Delete";
}

<h5 class="text-danger mb-3">
    Are you sure you want to delete this comment?
</h5>
<div class="card flex-column mb-3">
    <div class="d-flex justify-content-between">
        <span>@Html.Raw(Model.Content.Replace(Environment.NewLine, "<br/>"))</span>
        <span class="text-muted col-3 text-right">@Model.DateTime.ToString("HH:mm, dd MMMM yyyy")</span>
    </div>
</div>

<form asp-controller="Comments" asp-action="DeleteComment" method="post">
    <div class="form-group">
        <input asp-for="Id" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href='javascript:history.go(-1)' class="btn btn-secondary">Cancel</a>
    </div>
</form>

