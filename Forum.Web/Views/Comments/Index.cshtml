@model Forum.Web.ViewModels.CommentsIndexVm
@{
    ViewData["Title"] = "Index";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a href="/@Model.Theme.Title">@Model.Theme.Title</a></li>
        <li class="breadcrumb-item"><a href="/@Model.Theme.Title/@Model.Category.Title">@Model.Category.Title</a></li>
    </ol>
</nav>

<div class="card mb-3">
    <div class="card-header">
        <h2>@Model.Post.Title</h2>
    </div>
    <div class="card-body flex-column">
        <span class="font-weight-bold">@(Model.Post.User?.Username ?? "[deleted]")</span>
        <div class="d-flex justify-content-between">
            <span>@Model.Post.Content</span>
            <span class="text-muted">@Model.Post.DateTime.ToString("HH:mm, dd MMMM yyyy")</span>
        </div>
    </div>
</div>

@if (Model.IsLoggedIn)
{
    <partial name="CreateCommentPartial" for="Comment" />
}

<ul class="list-group">
    @foreach (var com in Model.Comments)
    {
        <li class="list-group-item flex-column">
            <span class="font-weight-bold">@(com.User?.Username ?? "[deleted]")</span>
            <div class="d-flex justify-content-between">
                @if (com.IsDeleted)
                {
                    <span>[deleted]</span>
                }
                else
                {
                    <span>@Html.Raw(com.Content.Replace(Environment.NewLine, "<br/>"))</span>
                }
                <span class="col-3 text-right">
                    <span class="text-muted">@com.DateTime.ToString("HH:mm, dd MMMM yyyy")</span><br />
                    @if (Model.IsLoggedIn && com.User?.Id == Model.UserId && !com.IsDeleted)
                    {
                        <a asp-action="Edit" asp-route-id="@com.Id" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@com.Id" class="btn btn-secondary">Delete</a>
                    }
                </span>
            </div>
        </li>
    }
</ul>

